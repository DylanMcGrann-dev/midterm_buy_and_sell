<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <link rel="stylesheet" href="/styles/offers_cart.css" type="text/css" />


    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <!-- Top nav bar (fixed) -->
    <nav>
      <ul>
        <!-- <li><img src="\images\logo.png"></li> -->
        <li><label for="logo">BS</label></li>
        <li><a href="/main">HOME</a></li>
        <li><a href="/shop">SHOP MENS</a></li>
        <li><a href="/shop">SHOP WOMENS</a></li>
        <li><a href="/shop">SHOP ALL</a></li>
        <li style="float:right"><a href="/signup">SIGNUP</a></li>
        <li style="float:right"><a href="/login">LOGIN</a></li>
    </ul>
    </nav>

    <header>
      <div class="shopnow">
        <table>
          <tr>
            <td>SHOP MENS</td>
            <td>SHOP WOMENS</td>
            <td>SHOP ALL</td>
          </tr>
        </table>
      </div>
    </header>
    <main>
      <div><% for(let offer of offers) { %></div>
        <div class="whole_container">
          <img class="offer_picture" src='<%= offer.photo_url %>'/>
          <div class="detail_container" >
            <div class="header_container">
              <span id="user_id"><%= offer.user_id %></span>
              <button type="button" class="close" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="description_and_status">
              <div class="description">
                <td><%= offer.description %></td>
              </div>
              <div class="checkout">
                <span id="price"><b>Price: <%= offer.total_cost %></b></span>
                <button type="button" class="btn btn-success">Checkout</button>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </main>
    <footer>
      <table>
      <tr>
        <th> SUPPORT</th>
        <th>CUSTOMER SERVICE</th>
      </tr>
      <tr>
        <td>Shipping & Delivery</td>
        <td>EMAIL: help@BS.ca</td>
      </tr>
      <tr></tr>
        <td>Return Policy</td>
        <td>1-800-000-HELP</td>
      </tr>
    </footer>
  </body>
</html>
